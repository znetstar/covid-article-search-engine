{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2018",
    "rootDir": "src",
    "outDir": "lib",
    "lib": [
      "es2017",
      "dom"
    ],
    "experimentalDecorators": true,
    "importHelpers": true
  },
  "include": [
    "**/*.ts",
    "**/*/*.ts"
  ]
}